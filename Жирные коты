#include "stdafx.h"
#include<iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "RUSSIAN");
	double weigt_1, weigt_2;
	cout << "Введите массу первого кота: ";
	cin >> weigt_1;
	cout << "Введите массу второго кота: ";
	cin >> weigt_2;

	if (weigt_1 > 5) {
		cout << "У первого кота ожирение!" << endl;
	}
	else if (weigt_2>5) {
		cout << "У второго кота ожирение!" << endl;
	} 
	else if ((weigt_1 > 5) && (weigt_2 > 5)) {
		cout << "У обоих котов ожирение!" << endl;
	}
	else {
		cout << "Коты здоровы!)" << endl;
	}
	system("pause"); 
    return 0;
}
